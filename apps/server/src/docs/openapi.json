          "createdAt": {
            "type": "string",
            "default": "2/12/2024"
          }
        },
        "required": [
          "id"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "TodoCreatePayload": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "minLength": 5,
            "maxLength": 25
          },
          "isDone": {
            "type": "boolean"
          }
        },
        "required": [
          "content",
          "isDone"
        ],
