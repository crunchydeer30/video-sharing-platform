{
  "openapi": "3.0.0",
  "info": {
    "title": "REST Api Documentation",
    "description": "REST Api Documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/"
    }
  ],
  "paths": {
    "/api/healthcheck/": {
      "get": {
        "tags": [
          "Healthcheck"
        ],
        "summary": "Healthcheck",
        "description": "Ensure that app is up and running",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/accounts/{id}": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "summary": "Get an account",
        "description": "Get an account",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountNonSensitive"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/AccountNonSensitive"
                }
              }
            }
          },
          "404": {
            "description": "Account not found"
          }
        }
      },
      "delete": {
        "tags": [
          "Accounts"
        ],
        "summary": "Remove an account",
        "description": "Remove an account",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Account deleted successfully"
          },
          "404": {
            "description": "Account not found"
          }
        }
      }
    },
    "/api/accounts/": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "summary": "Get all accounts",
        "description": "Get all accounts",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountNonSensitive"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/AccountNonSensitive"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login",
        "description": "Login",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logged in succesfully"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logged in succesfully"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register",
        "description": "Register",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Registered succesfully"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Registered succesfully"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout",
        "description": "Logout",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logged out succesfully"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logged out succesfully"
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "SessionAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "SessionAuth": {
        "type": "apiKey",
        "name": "sessionId",
        "in": "cookie"
      }
    },
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Channel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "handle": {
            "type": "string"
          },
          "accountId": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Video": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "thumbnail": {
            "type": "string"
          },
          "preview": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "uploaded": {
            "type": "boolean",
            "default": false
          },
          "channelId": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ContentDetails": {
        "type": "object",
        "properties": {
          "videoId": {
            "type": "string"
          },
          "duration": {
            "type": "integer"
          }
        }
      },
      "ProcessingDetails": {
        "type": "object",
        "properties": {
          "videoId": {
            "type": "string"
          },
          "processingStatus": {
            "type": "string",
            "default": "NOT_STARTED",
            "enum": [
              "NOT_STARTED",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          },
          "uploadingStatus": {
            "type": "string",
            "default": "NOT_STARTED",
            "enum": [
              "NOT_STARTED",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          },
          "status_240p": {
            "type": "string",
            "default": "NOT_AVAILABLE",
            "enum": [
              "NOT_AVAILABLE",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          },
          "status_360p": {
            "type": "string",
            "default": "NOT_AVAILABLE",
            "enum": [
              "NOT_AVAILABLE",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          },
          "status_480p": {
            "type": "string",
            "default": "NOT_AVAILABLE",
            "enum": [
              "NOT_AVAILABLE",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          },
          "status_720p": {
            "type": "string",
            "default": "NOT_AVAILABLE",
            "enum": [
              "NOT_AVAILABLE",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          },
          "status_1080p": {
            "type": "string",
            "default": "NOT_AVAILABLE",
            "enum": [
              "NOT_AVAILABLE",
              "IN_PROGRESS",
              "COMPLETED",
              "FAILED"
            ]
          }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "authorId": {
            "type": "string"
          },
          "videoId": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Subscription": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "subscriberId": {
            "type": "string"
          },
          "channelId": {
            "type": "string"
          }
        }
      },
      "AccountNonSensitive": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "email",
          "createdAt",
          "updatedAt"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "AccountCreateBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "allOf": [
              {
                "pattern": "[A-Z]"
              },
              {
                "pattern": "[!@#$%^&*(),.?\":{}|<>_]"
              }
            ]
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "LoginBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    }
  }
}