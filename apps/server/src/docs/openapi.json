  "components": {
    "securitySchemes": {
      "SessionAuth": {
        "type": "apiKey",
        "name": "sessionId",
        "in": "cookie"
      }
    },
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "email",
          "createdAt",
          "updatedAt"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "AccountCreateBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "allOf": [
              {
                "pattern": "[A-Z]"
              },
              {
                "pattern": "[!@#$%^&*(),.?\":{}|<>_]"
              }
            ]
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "LoginBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "Channel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "allOf": [
              {
                "type": "string"
              },
              {
                "type": "string",
                "default": "Channel title"
              }
            ]
          },
          "description": {
            "allOf": [
              {
                "type": "string"
              },
              {
                "type": "string",
                "default": "Channel description"
              }
            ]
          },
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "handle": {
            "allOf": [
              {
                "type": "string"
              },
              {
                "type": "string",
                "default": "@user-hJscxz12"
              }
            ]
          },
          "image": {
            "allOf": [
              {
                "type": "string"
              },
              {
                "type": "string",
                "default": "/assets/default_profile.png"
              }
            ]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "title",
          "description",
          "accountId",
          "handle",
          "image",
          "createdAt",
          "updatedAt"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      },
      "ChannelCreateBody": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 25
          },
          "description": {
            "type": "string",
            "minLength": 3,
            "maxLength": 100
          },
          "handle": {
            "type": "string",
            "allOf": [
              {
                "pattern": "^@"
              },
              {
                "pattern": "^(?!.*@.*@)"
              },
              {
                "pattern": "^[a-zA-Z0-9_@-]+$"
              }
            ],
            "minLength": 3,
            "maxLength": 25
          }
        },
        "required": [
          "title"
        ],
        "additionalProperties": false,
        "$schema": "http://json-schema.org/draft-07/schema#"
      }
    }
  }
}